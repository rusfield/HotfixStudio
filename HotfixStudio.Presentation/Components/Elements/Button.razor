@using HotfixStudio.Presentation.Components.BaseElements

<div class="button-component @GetClasses()">
    <button @onclick="OnClick">
        @if (ChildContent != null)
        {
            @ChildContent
        }
        else
        {

            <span class="label">
                @Text
            </span>

        }
        <div class="button-background-image left" />
        <div class="button-background-image right" />
        <div class="button-background-image middle" />
    </button>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public ElementColor TextColor { get; set; } = ElementColor.TEXT;

    [Parameter]
    public ElementColor BackgroundColor { get; set; } = ElementColor.PRIMARY;

    [Parameter]
    public ElementSize Size { get; set; } = ElementSize.DEFAULT;

    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public bool AnimationEffects { get; set; } = true;

    string GetClasses()
    {
        string classes = Size.ToString().ToLower();
        if (Disabled)
            classes += " disable-content";
        else if (!AnimationEffects)
            classes += " disable-animations";

        return classes;
    }
}
