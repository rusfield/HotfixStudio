<div class="icon-component material-symbols" style="@GetColorStyle()">
    <span>
        @IconName
    </span>
</div>

@code {
    [Parameter]
    public string IconName { get; set; }

    [Parameter]
    public ElementColor Color { get; set; } = ElementColor.TEXT;

    string GetColorStyle()
    {
        string color = Color.ToString().ToLower().Replace("_", "-");
        return $"color:var(--color-{color});";
    }
}
